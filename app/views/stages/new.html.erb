<!-- Validation failure messages -->
<% if @stage.errors.any? %>
  <% @stage.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Stage</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_stage" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for issue_id -->
      <div class="form-group">
        <label for="issue_id" class="control-label">
          Issue
        </label>

        <%= select_tag(:issue_id, options_from_collection_for_select(Issue.all, :id, :user_id, @stage.issue_id), :class => "form-control") %>
      </div>

      <!-- Label and input for stage_number -->
      <div class="form-group">
        <label for="stage_number" class="control-label">
          Stage number
        </label>

        <input type="text" id="stage_number" name="stage_number" placeholder="Stage number" class="form-control" value="<%= @stage.stage_number %>">
      </div>

      <button class="btn btn-success">
        Create Stage
      </button>
      or
      <a href="/stages">Cancel</a>
    </form>
  </div>
</div>
