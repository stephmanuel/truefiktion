<div class="page-header">
  <h1>
    Stages
    <a href="/stages/new" class="btn btn-lg btn-success">New Stage</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "stages_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :stage_number, "Stage number" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :stage_number_gteq, :class => "form-control", :placeholder => "Stage number greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :stage_number_lteq, :class => "form-control", :placeholder => "Stage number less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
  <%= f.label :user_id, "Issue User" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :issue_user_id_gteq, :class => "form-control", :placeholder => "Issue User greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :issue_user_id_lteq, :class => "form-control", :placeholder => "Issue User less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :week_id, "Medium Week" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :media_week_id_gteq, :class => "form-control", :placeholder => "Medium Week greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :media_week_id_lteq, :class => "form-control", :placeholder => "Medium Week less than or equal to" %>
    </div>
  </div>
</div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/stages" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#stages_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Issue</th>
        <th>Stage number</th>
        <th>Actions</th>
      </tr>

      <% @stages.each do |stage| %>
      <tr>
        <td>
          <% if stage.issue.present? %>
            <a href="/issues/<%= stage.issue.id %>">
              <%= stage.issue.user_id %>
            </a>
          <% end %>
        </td>
        <td><%= stage.stage_number %></td>
        <td>
          <a href="/stages/<%= stage.id %>" class="btn btn-primary">Show</a>
          <a href="/stages/<%= stage.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_stage/<%= stage.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @stages, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
